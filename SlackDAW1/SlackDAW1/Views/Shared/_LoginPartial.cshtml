@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<style>

    body {
        background-color: #161a30;
        margin: 0px;
        width: 100%;
        overflow-x: hidden;
        text-align: start;
    }

    .navbar nav {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
        padding: 20px;
        position: fixed;
        top: 0;
        width: 100%;
        z-index: 1;
        background-color: #161a30;
        height: auto;
        border-bottom: 2px solid #31304d;
    }

    .navbar a {
        color: white;
        font-size: 2.5rem;
        margin: 0px;
        text-decoration: none;
    }

    .navbar a:hover {
		color: #b6bbc4;
	}

    .auth {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
        gap: 28px;
        padding-right: 60px;
    }

        .auth a:first-child {
            font-size: 1.25rem;
            color: #161a30;
            background-color: white;
            padding: 10px 25px;
            text-decoration: none;
        }

            .auth a:first-child:hover {
                background-color: #31304d;
                color: white;
            }

        .auth a:last-child {
            font-size: 1.25rem;
            color: white;
            padding: 10px 25px;
            text-decoration: none;
            background-color: #31304d;
        }

            .auth a:last-child:hover {
                background-color: white;
                color: #161a30;
            }
</style>

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
        <div class="navbar">
            <nav>
                <a href="/">Slacky</a>
                <div class="auth">
                    <a asp-area="Identity" asp-page="/Account/Manage/Index">@User.Identity?.Name</a>
                    <a asp-area="Identity" asp-page="/Account/Logout">Logout</a>
                </div>
            </nav>
        </div>
}
else
{
        <div class="navbar">
            <nav>
                <a href="/">Slacky</a>
                <div class="auth">
                    <a asp-area="Identity" asp-page="/Account/Login">Login</a>
                    <a asp-area ="Identity" asp-page="/Account/Register">Register</a>
                </div>
            </nav>
        </div>
}
</ul>
